<div class="main-container">
    <div class="jumbotron">
    <h1>My Burger, My Way!</h1>
        <h3>Eat Some Burgers</h3>
        <br>
        <p>Make the Burgers. Eat the Burgers.</p>
        <br>
        <h2>Order Your Burger Your Way!</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newBurger">Order Any Burger</label>
                    <input type="text" id="newBurger" name="burger">
                    <select data-placeholder="" id="newBurger" name="burger">
                        <option value="Nothing Selected" selected>Please Select a Burger</option>
                        <option value="Hawaiian BBQ Burger">Hawaiian BBQ Burger</option>
                        <option value="Little Bacon Cheeseburger">Little Bacon Cheeseburger</option>
                        <option value="Scrum-Delicious Burger">Scrum-Delicious Burger</option>
                        <option value="Chile Veggie Burger">Chile Veggie Burger</option>
                    </select>
                    <button type="submit" class="btn btn-outline-warning" id="addBurger">
                        <span class="fa fa-thumbs-up"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panle-default">
                <div class="panel-heading" id="leftside"><strong>Order Your Burger</strong></div>
                <div class="panel-body">
                    
                    <ul class="list-group" style="align-content: center;">
                        {{#each burgers}}
                        {{#unless this.devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="submit" class="btn btn-outline-warning">Devour!</button>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
            <div class="panel panle-default">
                <div class="panel-heading" id="rightside"><strong>Your Burger</strong></div>
                <div class="panel-body">
                    <ul class="list-group" style="align-content: center;">
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="deleteburger btn btn-outline-warning" id="deleteburger" data-id="{{this.id}}">Devour!</button>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
</div>
