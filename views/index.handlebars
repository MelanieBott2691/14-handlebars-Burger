<div class="main-container">
    <div class="jumbotron big-banner" style="height: 500px; padding-top: 150px;"></div>
</div>
{{!-- ================ bootstrap template --}}

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-preview">
            <h1 class="post-title">My Burger; My Way!</h1>
            <br><br>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="container" id="burger-order">
    <div class="centered" class="list">
    <h2 class="post-subtitle"><strong>Order the Burger. Devour the Burger!</strong></h2>
    </div>
    <hr>
    <br>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panle-default">
                <div class="panel-heading" id="leftside"><strong>Order Your Burger</strong></div>
                <br>
                <div class="panel-body">
                    
                    <ul class="list-group" style="align-content: center;">
                        {{#each burgers}}
                        {{#unless this.devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="submit" class="btn btn-outline-danger"><strong>Devour!</strong></button>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
            <div class="panel panle-default">
                <div class="panel-heading" id="rightside"><strong>Burger Devoured!</strong></div>
                <br>
                <div class="panel-body">
                    <ul class="list-group" style="align-content: center;">
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="deleteburger btn btn-outline-warning" id="deleteburger" data-id="{{this.id}}">Devour!</button>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
<br>
<br>
<label for="newBurger">If you don't see what you want, order any burger HERE!</label>
                    <input type="text" id="newBurger" name="burger">
                    <button type="button" class="btn btn-danger btn-lg" data-toggle="button" id="addBurger">Add Burger!</button>
  </div>
     
  <hr>

